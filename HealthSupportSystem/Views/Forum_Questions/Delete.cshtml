@model DatabaseLayer.Forum_Questions

@{
    ViewBag.Title = "Delete";
    Layout = null;
}

<style>
    .delete-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

        .delete-container h2 {
            font-size: 24px;
            margin-bottom: 20px;
            color: #333;
        }

        .delete-container h3 {
            font-size: 20px;
            margin-bottom: 15px;
            color: #555;
        }

        .delete-container .dl-horizontal dt {
            font-weight: bold;
            margin-top: 10px;
        }

        .delete-container .dl-horizontal dd {
            margin-left: 0;
            margin-bottom: 10px;
        }

        .delete-container .form-actions {
            margin-top: 20px;
        }

        .delete-container .genric-btn {
            padding: 10px 20px;
            margin-right: 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            font-size: 16px;
            color: #fff;
            transition: background-color 0.3s ease;
        }

            .delete-container .genric-btn.danger {
                background-color: #dc3545;
            }

            .delete-container .genric-btn.default {
                background-color: #007bff;
            }

            .delete-container .genric-btn:hover {
                opacity: 0.8;
            }
</style>

<div class="delete-container">
    <h2>Delete</h2>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Forum Question</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Title)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.UserTable.UserName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserTable.UserName)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="genric-btn danger" />
                @Html.ActionLink("Back", "QuestionsList", null, new { @class = "genric-btn default" })
            </div>
        }
    </div>
</div>
