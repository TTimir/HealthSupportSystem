@model IEnumerable<DatabaseLayer.LabTestDetailsTable>

@{
    ViewBag.Title = "Test Details";
}


<script src="~/Scripts/jquery-3.4.1.min.js"></script>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        @Html.ActionLink("Add Details", "AddTestDetails", "LabSetting", new { @style = "float:left;", @class = "genric-btn primary" })
        <input type="text" id="search" name="search" class="form-control col-md-3" style="float:right;" placeholder="🔍 Search here" />
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Test Name
                        </th>
                        <th>
                            Details
                        </th>
                        <th>
                            MinValue
                        </th>
                        <th>
                            MaxValue
                        </th>
                        <th>Actions's'</th>
                    </tr>
                </thead>
                <tbody id="searchValue">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.LabTestTable.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MinValue)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MaxValue)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "EditTestDetails", new { id = item.LabTestDetailID }, new { @class = "genric-btn success" })
                                @Html.ActionLink("Details", "Details", new { id = item.LabTestDetailID }, new { @class = "genric-btn info" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.LabTestDetailID }, new { @class = "genric-btn danger" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#search").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#searchValue tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
            });
        });
    });
</script>
