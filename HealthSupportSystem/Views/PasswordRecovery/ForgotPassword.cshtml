@{
    ViewBag.Title = "Forgot Password";

    string passwordSection = string.Empty;

    if (!string.IsNullOrEmpty(ViewBag.NewPassword))
    {
        passwordSection = "<strong>Your new password is: </strong>" + ViewBag.NewPassword + "</p></div>";
    }
    else
    {
        passwordSection = "<strong>No new password generated.</strong>";
    }

}

<h2>Recover Password</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" name="email" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Recover Password</button>

    @Html.Raw(passwordSection)
    
}
